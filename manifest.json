{
    "manifest_version": 3,
    "name": "Maily",
    "version": "1.0",
    "description": "An extension that gives the emotion of the highlighted text",
    "icons": {
        "16": "images/16-icon.png",
        "32": "images/32-icon.png",
        "48": "images/48-icon.png",
        "128": "images/128-icon.png"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "css": ["scripts/styles.css"],
        "js": ["scripts/content.js", "scripts/message.js", "scripts/getColor.js", "scripts/getEmotion.js", "scripts/utils.js"],
        "all_frames": true
      }],
    "permissions": ["activeTab", "https://api-inference.huggingface.co/models/arpanghoshal/EmoRoBERTa", "https://eu-central-1.aws.data.mongodb-api.com/app/data-brhhi/endpoint/data/v1/action/findOne"],
    "action": {
        "default_popup": "popup/popup.html"
    },
    "web_accessible_resources":  [{
        "resources": ["box/box.html", "box/box.css"],
        "matches": ["<all_urls>"]
      }]
}